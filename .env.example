# Tip Genius Environment Variables
# Copy this file to .env and fill in your actual API keys
#
# IMPORTANT: Never commit .env files with actual secrets to git!
# This file shows the structure without exposing real credentials.

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Odds API - Get soccer match odds data
# Sign up at: https://the-odds-api.com/
ODDS_API_KEY=your_odds_api_key_here

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================

# Anthropic Claude API
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepInfra API (for Meta Llama and Microsoft Phi models)
# Get key at: https://deepinfra.com/
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# DeepSeek API
# Get key at: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google Gemini API
# Get key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Mistral AI API
# Get key at: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenAI API
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API (for Grok and other models)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# VERCEL KV STORAGE (Redis)
# =============================================================================

# Vercel KV REST API credentials
# Get these from your Vercel dashboard under Storage -> KV

# Main KV token for writing data (used by prediction script)
KV_REST_API_TOKEN=your_vercel_kv_token_here

# KV database URL
KV_REST_API_URL=your_vercel_kv_url_here

# Read-only token for frontend API (used by api/predictions.js)
# This should be a separate token with only read permissions for security
KV_REST_API_READ_ONLY_TOKEN=your_vercel_kv_readonly_token_here

# Default key for storing/retrieving prediction data
# Format: Match_Predictions_{LLM_PROVIDER}_{OPTIONS}
KV_DEFAULT_KEY=Match_Predictions_Mistral-Medium_FourPointsScoring_named_with-info

# =============================================================================
# DEBUG CONFIGURATION (Optional)
# =============================================================================

# Enable debug mode for verbose logging and limited processing
# Set to TRUE for development, FALSE for production
DEBUG_MODE=FALSE

# Limit the number of matches processed in debug mode
# Useful for testing without hitting rate limits
DEBUG_PROCESS_LIMIT=2

# =============================================================================
# NOTES
# =============================================================================

# 1. For Some proviers Free tier API keys are available, but they may have limitations
# 2. Some providers have rate limits - check your provider's documentation
# 3. Vercel KV is optional - predictions can be saved to local files instead
# 4. You don't need ALL API keys - the system will skip unavailable providers
# 5. For local development, set DEBUG_MODE=TRUE for verbose logging
# 6. KV_REST_API_READ_ONLY_TOKEN should be different from KV_REST_API_TOKEN for security
# 7. KV_DEFAULT_KEY format: Match_Predictions_{LLM}_{SCORING}_{NAMED}_{INFO}
